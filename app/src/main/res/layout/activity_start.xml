<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#00A3E8"
        android:gravity="center_horizontal"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/iv_start"
            android:layout_width="282dp"
            android:layout_height="208dp"
            android:background="@drawable/guess"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜数字"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
    />

    <Button
            android:id="@+id/btn_startGame"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="开始游戏"
            android:textSize="35sp"
            android:textColor="#00A3E8"
            android:background="@drawable/btn_pass"
            android:layout_marginTop="50dp"/>

    <Button
            android:id="@+id/btn_instruction"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="游戏说明"
            android:textSize="35sp"
            android:layout_below="@+id/btn_startGame"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_pass"
            android:textColor="#00A3E8"
    />

</LinearLayout>